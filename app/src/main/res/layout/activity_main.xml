<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/layoutId"
    android:background="#009900">

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="@string/buttonIn"
        android:id="@+id/button"
        android:onClick="DoStuff"
        android:layout_marginTop="104dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch page"
        android:id="@+id/switchButton"
        android:onClick="SwitchPage"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/input"
        android:layout_alignRight="@+id/label"
        android:layout_alignEnd="@+id/label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello World"
        android:id="@+id/label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:width="250dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share"
        android:id="@+id/txtShare"
        android:layout_marginTop="78dp"
        android:clickable="true"
        android:layout_below="@+id/switchButton"
        android:layout_centerHorizontal="true"
        android:onClick="ShareClicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Report"
        android:id="@+id/txtReport"
        android:layout_below="@+id/txtShare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:clickable="true"
        android:onClick="sendEmail" />

</RelativeLayout>
